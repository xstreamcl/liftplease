            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAJESnpe8r8e8BtTLCb-aeplVUC04aG3jY" />

        <activity
            android:name=".MapsActivity"
            android:label="Create a trip"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.co.liftplease.myapplication.DefaultActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".PlacePickActivity"
            android:label="@string/title_activity_place_pick" >
        </activity>
    </application>

</manifest>
